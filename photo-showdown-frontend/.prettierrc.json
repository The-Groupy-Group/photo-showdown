{
  "overrides": [{
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "endOfLine": "auto",
        "bracketSameLine": true,
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSpacing": false,
        "printWidth": 140
      }

    },
    {
      "files": "*.ts",
      "options": {
        "endOfLine": "auto",
        "useTabs": true,
        "tabWidth": 4,
        "singleQuote": false,
        "semi": true,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "trailingComma": "none",
        "printWidth": 140
      }
    }
  ]
}
